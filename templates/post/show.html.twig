{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ post.titulo }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ post.contenido }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}" class="btn btn-success">Volver a la lista</a>
<div class="d-flex justify-content-end gap-2">
    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-success">Editar</a>

    {{ include('post/_delete_form.html.twig') }}
    </div>
{% endblock %}
