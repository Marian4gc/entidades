{% extends 'base.html.twig' %}

{% block title %}Usuario index{% endblock %}

{% block body %}
    <h1>Indice de Usuarios </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Post</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.post }}</td>
                <td>
                    <a href="{{ path('app_usuario_show', {'id': usuario.id}) }}" class="btn btn-outline-success">Ver</a>
                    <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}" class="btn btn-outline-success">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_usuario_new') }}" class="btn btn-success">Create new</a>
    <a href="{{ path('app_post_index') }}" class="btn btn-success">Posts</a>
{% endblock %}
